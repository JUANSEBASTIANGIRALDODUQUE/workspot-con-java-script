<%= simple_form_for(@place) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-imputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :nation %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form_actions btn btn-primary">
    <%= f.button :submit %>
  </div>
  <%= link_to 'Back to places', root_path %>
<% end %>
