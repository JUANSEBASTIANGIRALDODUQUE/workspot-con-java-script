

<div>
  <div class="row container-half-cover justify-content-center align-items-center">

    <div class="container-half-image col-6" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(https://res.cloudinary.com/dr7mlnvca/image/upload/v1665257075/annie-spratt-MChSQHxGZrQ-unsplash_x3kjqj.jpg)"></div>

    <div class="p-5 col-6">
      <div class="container">
        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
          data: {turbo: false}) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions mb-3" >
            <%= f.button :submit, "Log in", class: "btn btn-primary" %>
          </div>
        <% end %>

        <ul class="list-group list-group-flush" style="width: 25%">
          <%= render "devise/shared/links" %>
        </ul>
      </div>
    </div>

  </div>
</div>
